<Page
    x:Class="WinUI3Demo.Views.Pages.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="using:WinUI3Demo.Behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:usercontrols="using:WinUI3Demo.UserControls"
    xmlns:viewmodels="using:WinUI3Demo.ViewModels.Pages"
    behaviors:NavigationViewHeaderBehavior.HeaderMode="Never"
    d:DataContext="{d:DesignInstance Type=viewmodels:HomeViewModel}"
    NavigationCacheMode="Required"
    mc:Ignorable="d">

    <StackPanel x:Name="ContentArea" Orientation="Vertical">
        <TextBlock
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Style="{ThemeResource PageTitleStyle}"
            Text="{x:Bind ViewModel.AppDisplayName, Mode=OneTime}" />
        <usercontrols:LineChart
            x:Name="LineChart"
            Width="600"
            Height="400"
            ItemsSource="{x:Bind ViewModel.SalesData, Mode=TwoWay}"
            XAxisMax="100"
            XAxisMin="10"
            YAxisMax="6200"
            YAxisMin="0" />
        <Button
            Grid.Row="1"
            Command="{x:Bind ViewModel.RestoreCommand}"
            Content="Restore" />
    </StackPanel>
</Page>